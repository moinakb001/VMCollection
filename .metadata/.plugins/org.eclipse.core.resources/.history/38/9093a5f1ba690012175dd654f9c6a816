	public void paint(Graphics arg0) {
		// TODO Auto-generated method stub
		
		Graphics2D g=(Graphics2D)arg0;
		for (int i = 0; i < array.length; i++) {
			for (int j = 0; j < array.length; j++) {
				g.setColor(new Color(red[], arg1, arg2, arg3))
